<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/diagramm"
        android:layout_above="@+id/before_later_b"/>

    <LinearLayout
        android:id="@+id/before_later_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@id/zeitBar">

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.5"
            android:insetLeft="10dp"
            android:insetTop="10dp"
            android:insetRight="5dp"
            android:insetBottom="10dp"
            android:text="before"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="22sp"
            app:cornerRadius="0dp"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0.5"
            android:insetLeft="5dp"
            android:insetTop="10dp"
            android:insetRight="10dp"
            android:insetBottom="10dp"
            android:text="later"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textSize="22sp"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/zeitBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/artBar"
        android:backgroundTint="@color/FHGreen"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/artBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/FHGreen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>